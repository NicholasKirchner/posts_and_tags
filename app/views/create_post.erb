<h2> <%= @post.action %> a post! </h2>
<%= erb @post.errors_template, { :locals => { :errors => @post.errors } } %>
<form method="post" action="/posts/create">
  <%= erb @post.id_field_template, { :locals => { :post => @post }} %>

  <p> Enter your Title!
    <input type="text" name="post[title]" value="<%= @post.title %>">
  </p>
  <p> Enter your Text!  (Start each new paragraph with a "-".)
    <textarea name="post[content]" rows="8" cols="60"><%= @post.content %></textarea>
  </p>
  <p> Input the tags you want this under.  Separate the tags by commas.
    <input type="text" name="tags"
    value="<%= @post.tags %>">
  </p>
  <input type="submit"
  value="<%= @post.action %> this post!">
</form>
<%= erb @post.delete_button_template, { :locals => { :post => @post } } %>

